{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021", "DOM"],
    "outDir": "../dist-electron",
    "rootDir": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "types": ["node", "electron"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
